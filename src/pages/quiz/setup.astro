<style lang="scss">
@use '../../styles/pages/quiz' as *;

.quiz-setup__error {
  margin-bottom: var(--space-6);
  padding: var(--space-4);
  background: hsl(45, 100%, 95%);
  border: 1px solid hsl(45, 100%, 60%);
  border-radius: var(--radius-3);
  display: flex;
  gap: var(--space-3);
  align-items: flex-start;
}

