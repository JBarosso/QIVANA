      border-color: var(--color-warning);
      box-shadow: 0 0 12px rgba(250, 204, 21, 0.3);
    }

    &--rank-1 {
      background: linear-gradient(135deg, rgba(250, 204, 21, 0.15), rgba(250, 204, 21, 0.05));
      border-color: var(--color-warning);
      box-shadow: 0 0 16px rgba(250, 204, 21, 0.4);
