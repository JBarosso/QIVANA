    display: flex;
    justify-content: center;
    margin-bottom: var(--space-6);
  }

  .leaderboard-user-rank__badge {
    background: var(--color-surface);
    border-radius: var(--radius-4);
    padding: var(--space-4) var(--space-6);
    box-shadow: var(--shadow-lg);
    display: flex;
