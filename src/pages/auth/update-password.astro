---
// ============================================
// UPDATE PASSWORD PAGE
// ============================================
// Page where user lands after clicking reset password link

import BaseLayout from '@/layouts/BaseLayout.astro';

let error = Astro.url.searchParams.get('error');
let success = Astro.url.searchParams.get('success');

// Handle form submission (server-side)
if (Astro.request.method === 'POST') {
  const formData = await Astro.request.formData();
  const password = formData.get('password')?.toString();
  const passwordConfirm = formData.get('password-confirm')?.toString();

  if (!password || !passwordConfirm) {
    error = 'Tous les champs sont requis';
  } else if (password !== passwordConfirm) {
    error = 'Les mots de passe ne correspondent pas';
  } else {
    const { error: updateError } = await Astro.locals.supabase.auth.updateUser({
      password,
    });

    if (updateError) {
      error = updateError.message;
    } else {
      // Success: redirect to login
      return Astro.redirect('/auth/login?success=Mot+de+passe+mis+à+jour');
    }
  }
}
---

<BaseLayout
  title="Nouveau mot de passe - Qivana"
  description="Définissez votre nouveau mot de passe"
>
  <main class="auth-page">
    <div class="container">
      <div class="auth-card">
        <div class="auth-card__header">
          <h1 class="auth-card__title">Nouveau mot de passe</h1>
          <p class="auth-card__subtitle">
            Choisis ton nouveau mot de passe
          </p>
        </div>

        {error && (
          <div class="auth-card__error" role="alert">
            <p>❌ {error}</p>
          </div>
        )}

        <form class="auth-form" method="post">
          <div class="form-group">
            <label for="password" class="form-label">Nouveau mot de passe</label>
            <input
              type="password"
              id="password"
              name="password"
              class="form-input"
              placeholder="••••••••"
              required
              minlength="8"
              autocomplete="new-password"
            />
            <small class="form-hint">Minimum 8 caractères</small>
          </div>

          <div class="form-group">
            <label for="password-confirm" class="form-label">
              Confirme ton mot de passe
            </label>
            <input
              type="password"
              id="password-confirm"
              name="password-confirm"
              class="form-input"
              placeholder="••••••••"
              required
              minlength="8"
              autocomplete="new-password"
            />
          </div>

          <button type="submit" class="btn btn--primary btn--block">
            <span class="btn__text">Mettre à jour</span>
          </button>
        </form>
      </div>
    </div>
  </main>
</BaseLayout>

<style lang="scss">
  @use '@/styles/pages/auth';
</style>
