    opacity: 0;
    transition: opacity var(--transition-fast);
    border-radius: 50%;
  }

  .profile-avatar__overlay-icon {
    font-size: var(--fs-6);
    filter: drop-shadow(0 2px 4px rgba(0, 0, 0, 0.5));
  }

